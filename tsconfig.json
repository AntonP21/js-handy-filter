{
  "exclude": ["node_modules", "jest.config.js", "webpack.config.js", "build"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "conditions/*": [ "conditions/*" ],
      "condition-parser/*": [ "condition-parser/*" ],
      "filter/*": [ "filter/*" ],
      "lib/*": [ "lib/*" ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
